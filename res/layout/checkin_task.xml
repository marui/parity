<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView_task_title" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/textView_time" android:layout_alignLeft="@+id/textView_task_title"
            android:layout_below="@+id/textView_task_title"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/button_cancel" android:layout_alignLeft="@+id/textView_task_title"
            android:layout_alignParentBottom="true" android:layout_alignRight="@+id/spinner_time"/>
    <Button
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:id="@+id/button_confirm" android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/button_cancel" android:layout_alignParentLeft="true"
            android:layout_marginLeft="181dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_time" android:layout_toRightOf="@+id/textView_task_title"
            android:layout_below="@+id/textView_task_title" android:spinnerMode="dropdown"
            android:entries="@array/array_name"/>
</RelativeLayout>